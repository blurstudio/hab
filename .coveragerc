[report]
show_missing = true
skip_covered = true
skip_empty = true

[run]
# Ensure all python modules in hab have their coverage reported,
# not just files that pytest touches.
source = hab
omit =
    */site-packages/*
    */.tox/*
    tests/*
    # This file is automatically generated by setuptools_scm
    hab/version.py
parallel=True
relative_files=True
