{
    "os_specific": true,
    "linux": {
        "set":{
            "platforms": ["windows", "linux"]
        },
        "append": {
            "config_paths": [
                "config/path/linux"
            ],
            "distro_paths": [
                "distro/path/linux"
            ]
        }
    },
    "mac": {
        "set":{
            "platforms": ["mac", "linux"]
        },
        "append": {
            "config_paths": [
                "config/path/mac"
            ],
            "distro_paths": [
                "distro/path/mac"
            ]
        }
    },
    "windows": {
        "set":{
            "platforms": ["windows", "mac"]
        },
        "append": {
            "config_paths": [
                "config\\path\\windows"
            ],
            "distro_paths": [
                "distro\\path\\windows"
            ]
        }
    }
}
