{
    "os_specific": true,
    "linux": {
        "set":{
            "platforms": ["windows", "linux"]
        },
        "append": {
            "config_paths": [
                "config/path/linux"
            ],
            "distro_paths": [
                "distro/path/linux"
            ]
        }
    },
    "osx": {
        "set":{
            "platforms": ["osx", "linux"]
        },
        "append": {
            "config_paths": [
                "config/path/osx"
            ],
            "distro_paths": [
                "distro/path/osx"
            ]
        }
    },
    "windows": {
        "set":{
            "platforms": ["windows", "osx"]
        },
        "append": {
            "config_paths": [
                "config\\path\\windows"
            ],
            "distro_paths": [
                "distro\\path\\windows"
            ]
        }
    }
}
