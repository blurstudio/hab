{
    "append": {
        "config_paths": [
            "{relative_root}/configs/*"
        ],
        "distro_paths": [
            "{relative_root}/distros/*"
        ],
        "platform_path_maps": {
            "host-root": {
                "linux": "/usr/local/host/root",
                "osx": "/usr/local/osx/host/root",
                "windows": "c:\\host\\root"
            },
            "network-mount": {
                "linux": "/mnt/shared_resources",
                "osx": "/mnt/osx/shared_resources",
                "windows": "\\\\example\\shared_resources"
            }
        }
    },
    "set": {
        "generic_value": false,
        "filename": "site_main.json",
        "platforms": [
            "windows",
            "linux"
        ]
    }
}
